@page
@model GobernaRegistroBio.App.Frontend.Pages.Secretarios_DespachoModel
@{
}

<h1>Lista de Secretarios de Despacho</h1>
<table class="table">
    @foreach (var secretarios_despacho in Model.SEcretarios_Despacho)
    {
        <tr>
            <td>@secretarios_despacho.Despacho</td>
                             

            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesSecretarios_Despacho" asp-route-secretarios_despachoId="@secretarios_despacho.Id">
                <i class="fas fa-info-circle" aria-hidden="true"></i></a>
            </td>

            <td>
                <a class="btn btn-secondary table-btn" asp-page="./EditarSecretarios_Despacho" asp-route-secretarios_despachoId="@secretarios_despacho.Id">
                <i class="fas fa-address-book" aria-hidden="true"></i></a>
            </td>

            <td>
                <a class="btn btn-danger table-btn" asp-page="./EliminarSecretarios_Despacho" asp-route-secretarios_despachoId="@secretarios_despacho.Id">
                <i class="fas fa-book-dead" aria-hidden="true"></i></a>
            </td>
        </tr>
    }
</table>
<a asp-page=".\EditarSecretarios_Despacho" class="btn btn-primary">Adicionar ecretario de despacho</a>

